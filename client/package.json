{
  "name": "myy-cursor",
  "displayName": "Myy Cursor",
  "description": "Turn natural language into safe, reviewable workspace changes via your proxy-controlled LLM (Gemini / OpenAI / Anthropic): plan → preview → execute — now in a sidebar chat.",
  "version": "1.0.0",
  "publisher": "adityamishra9",
  "icon": "media/icon.png",
  "license": "MIT",
  "repository": { "type": "git", "url": "https://github.com/adityamishra9/my-cursor" },
  "bugs": { "url": "https://github.com/adityamishra9/my-cursor/issues" },
  "homepage": "https://github.com/adityamishra9/my-cursor#readme",
  "engines": { "vscode": "^1.104.0" },
  "categories": ["Other", "Programming Languages", "Debuggers"],
  "keywords": ["ai","llm","gemini","openai","anthropic","automation","codegen","cursor"],
  "extensionKind": ["workspace"],
  "activationEvents": [
    "onView:my-cursor.chat"
  ],

  "main": "./out/extension.js",

  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "my-cursor",
          "title": "My Cursor",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "my-cursor": [
        {
          "type": "webview",
          "id": "my-cursor.chat",
          "name": "Chat",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "configuration": {
      "title": "My Cursor",
      "properties": {
        "myCursor.provider": {
          "type": "string",
          "default": "gemini",
          "enum": ["gemini", "openai", "anthropic"],
          "description": "Which provider your proxy will route."
        },
        "myCursor.model": {
          "type": "string",
          "default": "gemini-2.0-flash",
          "description": "Provider-specific model id."
        },
        "myCursor.temperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 1,
          "description": "Generation temperature."
        },
        "myCursor.allowShell": {
          "type": "boolean",
          "default": true,
          "description": "Allow shell commands in plans (guarded by Workspace Trust)."
        },
        "myCursor.allowInstall": {
          "type": "boolean",
          "default": true,
          "description": "Allow npm installations in plans (requires allowShell=true)."
        },
        "myCursor.autoRun": {
          "type": "boolean",
          "default": false,
          "description": "Skip the Run confirmation and execute immediately."
        },
        "myCursor.persistHistory": {
          "type": "boolean",
          "default": true,
          "description": "Persist chat history between sessions."
        },
        "myCursor.openFilesAfterWrite": {
          "type": "boolean",
          "default": true,
          "description": "Open files in the editor after write/append/edit actions."
        },
        "myCursor.maxFilesToOpen": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "maximum": 50,
          "description": "Limit how many created/edited files auto-open."
        },
        "myCursor.apiProxyUrl": {
          "type": "string",
          "default": "https://cursor.adityamishra.tech/api/generate",
          "description": "Proxy endpoint to call (must handle Gemini/OpenAI/Anthropic)."
        },
        "myCursor.autoRepair": {
          "type": "boolean",
          "default": true,
          "description": "After a failed run, ask for a targeted repair plan."
        },
        "myCursor.maxRepairAttempts": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 5,
          "description": "Max consecutive repair plans to attempt."
        }
      }
    }
  },

  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "build": "tsc -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },

  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/vscode": "^1.104.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.5.4"
  }
}
