{
  "name": "my-cursor",
  "displayName": "My Cursor",
  "description": "Turn natural language into safe, reviewable workspace changes via Gemini: plan → preview → execute.",
  "version": "1.0.0",
  "publisher": "your-publisher-id",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:my-cursor.plan",
    "onCommand:my-cursor.configure",
    "onCommand:my-cursor.clearKey",
    "onCommand:my-cursor.toggleDryRun",
    "onCommand:my-cursor.clearHistory"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "my-cursor.plan", "title": "My Cursor: Plan & Run" },
      { "command": "my-cursor.configure", "title": "My Cursor: Set Gemini API Key" },
      { "command": "my-cursor.clearKey", "title": "My Cursor: Clear API Key" },
      { "command": "my-cursor.toggleDryRun", "title": "My Cursor: Toggle Dry Run" },
      { "command": "my-cursor.clearHistory", "title": "My Cursor: Clear Conversation History" }
    ],
    "configuration": {
      "title": "My Cursor",
      "properties": {
        "myCursor.model": {
          "type": "string",
          "default": "gemini-2.0-flash",
          "description": "Gemini model name."
        },
        "myCursor.temperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 1,
          "description": "Generation temperature."
        },
        "myCursor.dryRun": {
          "type": "boolean",
          "default": true,
          "description": "If true, no file or shell changes are written."
        },
        "myCursor.allowShell": {
          "type": "boolean",
          "default": false,
          "description": "Allow shell commands in plans (guarded by Workspace Trust)."
        },
        "myCursor.allowInstall": {
          "type": "boolean",
          "default": false,
          "description": "Allow npm installations in plans (requires allowShell=true)."
        },
        "myCursor.autoRun": {
          "type": "boolean",
          "default": false,
          "description": "If true, skip the Run confirmation dialog and execute immediately."
        },
        "myCursor.persistHistory": {
          "type": "boolean",
          "default": true,
          "description": "Persist conversation history between sessions."
        },
        "myCursor.openFilesAfterWrite": {
          "type": "boolean",
          "default": true,
          "description": "Open files in the editor after write/append/edit actions."
        },
        "myCursor.maxFilesToOpen": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "maximum": 50,
          "description": "Limit how many created/edited files auto-open."
        },
        "myCursor.embeddedApiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional: An API key embedded via settings. **Do NOT publish with a real key.** Prefer a proxy server."
        },
        "myCursor.apiProxyUrl": {
          "type": "string",
          "default": "",
          "description": "Optional HTTPS proxy endpoint that fronts the Gemini API using your server-side key."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "build": "tsc -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/vscode": "^1.104.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.5.4"
  }
}