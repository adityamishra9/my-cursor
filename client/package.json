{
  "name": "my-cursor",
  "displayName": "My Cursor",
  "description": "Turn natural language into safe, reviewable workspace changes via your proxy-controlled LLM (Gemini/OpenAI/Anthropic): plan → preview → execute.",
  "version": "1.0.0",
  "publisher": "your-publisher-id",
  "icon": "icon.png",
  "license": "MIT",
  "engines": { "vscode": "^1.104.0" },
  "categories": ["Other"],
  "extensionKind": ["workspace"],
  "activationEvents": [
    "onCommand:my-cursor.plan",
    "onCommand:my-cursor.clearHistory"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "my-cursor.plan", "title": "My Cursor: Plan & Run" },
      { "command": "my-cursor.clearHistory", "title": "My Cursor: Clear Conversation History" }
    ],
    "configuration": {
      "title": "My Cursor",
      "properties": {
        "myCursor.provider": {
          "type": "string",
          "default": "gemini",
          "enum": ["gemini", "openai", "anthropic"],
          "description": "Which provider to route via your proxy."
        },
        "myCursor.model": {
          "type": "string",
          "default": "gemini-2.0-flash",
          "description": "Provider-specific model id."
        },
        "myCursor.temperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 1,
          "description": "Generation temperature."
        },
        "myCursor.allowShell": {
          "type": "boolean",
          "default": true,
          "description": "Allow shell commands in plans (guarded by Workspace Trust)."
        },
        "myCursor.allowInstall": {
          "type": "boolean",
          "default": true,
          "description": "Allow npm installations in plans (requires allowShell=true)."
        },
        "myCursor.autoRun": {
          "type": "boolean",
          "default": false,
          "description": "If true, skip the Run confirmation dialog and execute immediately."
        },
        "myCursor.persistHistory": {
          "type": "boolean",
          "default": true,
          "description": "Persist conversation history between sessions."
        },
        "myCursor.openFilesAfterWrite": {
          "type": "boolean",
          "default": true,
          "description": "Open files in the editor after write/append/edit actions."
        },
        "myCursor.maxFilesToOpen": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "maximum": 50,
          "description": "Limit how many created/edited files auto-open."
        },
        "myCursor.apiProxyUrl": {
          "type": "string",
          "default": "https://cursor.adityamishra.tech/api/generate",
          "description": "Proxy endpoint to call (must handle Gemini/OpenAI/Anthropic)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "build": "tsc -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/vscode": "^1.104.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.5.4"
  }
}
